#include <stdio.h>
#include "main.h"
#include <stdlib.h>
/**
 * malloc_checked - allocates memory using malloc
 * @b: this is the memory space 
 * Return: returns pointer to the allocated space 
 */
void *malloc_checked(unsigned int b)
{
  unsigned int *spc;

  spc = malloc(b);

  if (spc == NULL)
    {
      return (0);
    }
  
  return (spc);
}
